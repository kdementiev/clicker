{% extends '::base.html.twig' %}

{% block content %}
    <h2>Links</h2>

    <div class="panel panel-default">

        <div class="panel-heading">Info</div>

        <div class="panel-body">
            <p>Click link to processing</p>
        </div>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Link</th>
                </tr>
            </thead>
            <tbody>
                {% for link in links %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td><a href="{{ link }}">{{ link }}</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}