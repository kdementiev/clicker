{% extends '::base.html.twig' %}

{% block content %}
    <h2>{{ 'page.link.title'|trans }}</h2>

    <div class="panel panel-default">
        <div class="panel-heading">{{ 'page.link.heading'|trans }}</div>

        <div class="panel-body">
            <p>{{ 'page.link.processing'|trans }}</p>
        </div>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>{{ 'page.link.link'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for link in links %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td><a href="{{ link }}">{{ link }}</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}