{% extends '::base.html.twig' %}

{% block content %}
    <h2>Bad Referrers</h2>

    <div class="panel panel-default">
        <div class="panel-heading">List</div>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th>Referrer</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for badReferrer in badReferrers %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ badReferrer.referrer }}</td>
                    <td><button title="Add domain to black list" class="btn btn-info">To black list</button></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}